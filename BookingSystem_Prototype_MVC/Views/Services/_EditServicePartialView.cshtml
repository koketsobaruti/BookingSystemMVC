                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                    </div>
                </form>

            </div>
            
        </div>
    </div>
    
    
    
    

</div>


<script type="text/javascript">
    function showAddHide(checked) {
        if (checked == true)
            $("#btnDiv").fadeIn();
        else $("#btnDiv").fadeOut();
    }
</script>